- var pageTitle = 'Bandeja - Profile';
doctype
html
    head
        include partials/head
    body
        include components/header
        section.profile-page.my-5
            .container.py-5.px-3
                .row
                    .col-lg-4.col-md-6.mt-5
                        .widget-holder
                            ul.text-capitalize
                                h2.text-capitalize
                                    | rating/ranking
                                li
                                    span
                                        i.fas.fa-ellipsis-v.mr-2
                                        | rating
                                    span 120
                                li
                                    span
                                        i.fas.fa-ellipsis-v.mr-2
                                        | ranking 
                                    span 5
                        .widget-holder.wallet.mt-3
                            ul.text-capitalize
                                h2.text-capitalize
                                    | my wallet
                                li
                                    span
                                        i.fas.fa-ellipsis-v.mr-2
                                        | bandeja coins 
                                    span
                                        | 145
                                        img(src="img/bc.png", alt="", class="ml-1")
                                li
                                    span
                                        i.fas.fa-ellipsis-v.mr-2
                                        | gift coins 
                                    span
                                        | 75
                                        img(src="img/gc.png", alt="", class="ml-1")
                                .transaction-btn
                                    a(href="#") transactions
                    .col-lg-4.col-md-6.order-md-0.order-first
                        .profile-card.py-5.px-3
                            .img-profile
                                a(class="venobox" data-gall="myGallery" href="img/player.jpg")
                                    img.img-fluid(src='img/player.jpg' alt='Change Your Image')
                            h3.player-name.text-center.text-capitalize.py-3
                                | player name
                            .edit-profile
                                a(href='edit-profile.html').text-capitalize.rounded
                                    i.fas.fa-cog
                                    span edit profile

                            ul.player-info.text-capitalize.w-100
                                li.w-100
                                    span
                                        i.fas.fa-bars
                                        | rating 
                                    span 12
                                li.w-100
                                    span
                                        i.fas.fa-bars
                                        | player position 
                                    span right
                                li.w-100
                                    span
                                        i.fas.fa-bars
                                        | height 
                                    span 185 cm
                    .col-lg-4.col-md-6.mt-5
                        .widget-holder
                            ul.text-capitalize
                                h2.text-capitalize
                                    | statistics
                                li
                                    span
                                        i.fas.fa-ellipsis-v.mr-2
                                        | sets played 
                                    span 120
                                li
                                    span
                                        i.fas.fa-ellipsis-v.mr-2
                                        | sets won 
                                    span 85
                                li
                                    span
                                        i.fas.fa-ellipsis-v.mr-2
                                        | sets lost 
                                    span 15
                                li
                                    span
                                        i.fas.fa-ellipsis-v.mr-2
                                        | games won 
                                    span 65
                                li
                                    span
                                        i.fas.fa-ellipsis-v.mr-2
                                        | games lost 
                                    span 15
                        .chart.mt-4
                            img(src='img/player.jpg' class='img-fluid w-100' alt='image alt')
        .match-history
            .container.p-5
                .row
                    .col-12
                        h2.text-uppercase.stroked-title.mb-5
                            span match history
                        table#history-table.table.table-striped.table-bordered(cellspacing='0' width='100%')
                            thead.text-capitalize
                                th match
                                th result
                                th Rating before
                                th Rating after
                            tbody
                                tr.text-capitalize
                                    td Player 1 & player 2 vs player 3 & player 4
                                    td 6 - 4
                                    td 5
                                    td 10
                                tr.text-capitalize
                                    td Player 1 & player 2 vs player 3 & player 4
                                    td 7 - 9
                                    td 6
                                    td 8

        include components/sponsors
        include components/footer
        include partials/footerScripts
        script.
            $(document).ready(function () {
                $('.venobox').venobox();
            });

