- var PageTitle = 'Banjeda - Login';
doctype
html
    head
        include partials/head
    body
        include partials/header
        section.log-page(data-aos='fade-up' data-aos-offset='0' data-aos-duration="700")
            .container
                .row.py-5
                    .col-lg-6
                        .form
                            .form-toggle
                            .form-panel.one
                                .form-header
                                    h1 Account Login
                                .form-facebook-log.mb-3
                                    button
                                        i.fab.fa-facebook-square.fa-lg
                                        span.text-capitalize log in with facebook account
                                .form-separated.my-4
                                    span    
                                    span OR
                                    span
                                .form-content
                                    form
                                        .form-group.text-capitalize
                                            label(for='log-username') Username
                                            input(type='text' id='log-username')
                                        .form-group.text-capitalize
                                            label(for='log-password') Password
                                            input(type='password' id='log-password')
                                        .form-group.text-capitalize
                                            input(type='checkbox' id='custom-check')
                                            label.form-remember.text-capitalize(for='custom-check')
                                                | Remember Me
                                            a.form-recovery(href='#') Forgot Password?
                                        .form-group.text-capitalize
                                            button(type='submit') Log In
                            .form-panel.two
                                .form-header
                                    h1 Register Account
                                .form-content
                                    form
                                        .form-group.text-capitalize
                                            label.text-white(for='firstname') First name
                                            input(type='text' id='firstname')
                                        .form-group.text-capitalize
                                            label.text-white(for='lastname') last name
                                            input(type='text' id='lastname')
                                        .form-group.text-capitalize
                                            label.text-white(for='reg-username') username
                                            input(type='text' id='reg-username')
                                        .form-group.text-capitalize
                                            label.text-white(for='reg-password') Password
                                            input(type='password' id='reg-password')
                                        .form-group.text-capitalize
                                            label.text-white(for='cpassword') Confirm Password
                                            input(type='password' id='cpassword')
                                        .form-group.text-capitalize
                                            label.text-white(for='email') Email Address
                                            input(type='email' id='email')
                                        .form-group.text-capitalize
                                            label.text-white(for='tel') tel. number
                                            input(type='email' id='tel')
                                        .form-group.text-capitalize
                                            label.text-white(for='position') player position
                                            ul.position-of-player
                                                li 
                                                    i
                                                li.text-placeholder
                                            ul.position-submenu
                                                li.text-capitalize right
                                                li.text-capitalize  left
                                                li.text-capitalize  both
                                        .form-group.birthdate-calendar.text-capitalize
                                            i.far.fa-calendar-alt.birthdate-icon
                                            label.text-white(for='birth') birthdate
                                            input#datepicker(type='text' placeholder="d-m-Y" data-large-mode="true" data-lock="to" data-translate-mode='true')
                                        .form-group.text-capitalize
                                            button.bg-light(type='submit') Register
                    .col-lg-6.d-lg-block.d-none
                        .bg-form

        section.sponsers.my-5(data-aos='fade' data-aos-offset='0' data-aos-duration="2000")
            .container
                .sponsers-slider
                    .item
                        img(src='img/sponsersSlider/slide01.png' class='img-fluid')
                    .item
                        img(src='img/sponsersSlider/slide02.png' class='img-fluid')
                    .item
                        img(src='img/sponsersSlider/slide03.png' class='img-fluid')
                    .item
                        img(src='img/sponsersSlider/slide04.jpg' class='img-fluid')
                    .item
                        img(src='img/sponsersSlider/slide02.png' class='img-fluid')
                    .item
                        img(src='img/sponsersSlider/slide05.jpg' class='img-fluid')
                    .item
                        img(src='img/sponsersSlider/slide01.png' class='img-fluid')

        include partials/footer
        include partials/footerScripts
        script(type="text/javascript").
            var panelOne = $('.form-panel.two').height(),
                panelTwo = $('.form-panel.two')[0].scrollHeight + 200;

                $('.form-panel.two').not('.form-panel.two.active').on('click', function(e) {
                    e.preventDefault();

                    $('.form-toggle').addClass('visible');
                    $('.form-panel.one').addClass('hidden');
                    $('.form-panel.two').addClass('active');
                    $('.form').animate({
                        'height': panelTwo
                    }, 200);
                });
                $('.form-toggle').on('click', function(e) {
                    e.preventDefault();
                    $(this).removeClass('visible');
                    $('.form-panel.one').removeClass('hidden');
                    $('.form-panel.two').removeClass('active');
                    $('.form').animate({
                        'height': panelOne
                    }, 200);
            });
